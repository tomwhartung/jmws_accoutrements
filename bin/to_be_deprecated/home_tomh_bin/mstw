#!/bin/bash
#
# mstw: run mysql and access db used by tomwhartung.com
# -----------------------------------------------------
#
db_user=root
db_name=wpress_tomwhartung

if [ "$1" == '' ]; then
   password_arg="-p"
else
   password_arg="--password=$1"
fi

set -x
mysql -u $db_user $password_arg $db_name
