#!/bin/bash
#
# mst: run mysql and access db used by tomhartung.com
# ---------------------------------------------------
#
### db_user=joomla
### db_name=jumlah_blog
db_user=root
db_name=drpal_tomhartung

if [ "$1" == '' ]; then
   password_arg="-p"
else
   password_arg="--password=$1"
fi

set -x
mysql -u $db_user $password_arg $db_name
